{{!-- section --}}
    <section class="section my-4">
        <div class="contanier text-center">
            <div class="title py-5">
                {{!-- <h1 style="font-size: 4vw;">앨범</h1> --}}
                <p class="subtitle" style="font-size: 4vw;">소중한 추억을 <strong>앨범</strong>에 공유해주세요</p>
            </div>
            <div class="row justify-content-center">
                <div class="col-4">
                    <form action="/uploadmutiple" enctype="multipart/form-data" method="POST">
                        <div class="row">
                            <div class="col-8">
                                <input type="file" class="form-control" name="images" id="formFile" multiple>
                            </div>
                            <div class="col-2">
                                <input type="submit" class="btn btn-warning" value="Upload">
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            {{!-- display images --}}
            <section class="mt-5">
                <div class="row">
                    
                        {{#each images}}
                            {{#each this}}
                                {{#if imageBase64}}
                                    {{!-- bootstrap cads --}}
                                        <div class="col-3">
                                            <div class="card shadow" style="width: 18rem;">
                                            <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                            <div class="card-body">
                                                <h3>{{images}}</h3>
                                            </div>
                                            </div>
                                        </div>
                                    {{!-- /bootstrap cads --}}
                                {{/if}}
                            {{/each}}
                        {{/each}}
                        
                    
                </div>

            </section>
            {{!-- /display images --}}

        </div>

    </section>


{{!-- section --}}